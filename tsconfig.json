{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "DOM"],
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}